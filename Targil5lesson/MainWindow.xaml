        <Image x:Name="Ramzor" HorizontalAlignment="Left" Height="150" Margin="57,51,0,0" VerticalAlignment="Top" Width="127" Source="/tamrur.jpg" Visibility="Hidden"/>
        <Image x:Name="Car" HorizontalAlignment="Left" Height="132" Margin="578,283,0,0" VerticalAlignment="Top" Width="183" Source="/CAR.jfif"/>
        <Button x:Name="ButtonOrangeLight" Content="Wait" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" Height="48" Width="122" RenderTransformOrigin="0.536,0.134" Click="Button_Click" Background="#FFFFA330"/>

    </Grid>
